<p id="notice"><%= notice %></p>

<h1>Listing Repair Order Records</h1>

<%= form_tag search_path, method: :get do %>
  <%= text_field_tag :q, nil %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Repair order</th>
      <th>Recommendations</th>
      <th>Maintenance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repair_order_records.each do |repair_order_record| %>
      <tr>
        <td><%= repair_order_record.repair_order %></td>
        <td><%= repair_order_record.recommendations %></td>
        <td><%= repair_order_record.maintenance %></td>
        <td><%= link_to 'Show', repair_order_record %></td>
        <td><%= link_to 'Edit', edit_repair_order_record_path(repair_order_record) %></td>
        <td><%= link_to 'Destroy', repair_order_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

